{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api",
    "queries": [],
    "exampleResponse": "You're looking at it!"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles (defaults to descending order by date)",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:id": {
    "description": "serves a single article matching the id passed in :id",
    "queries": [],
    "exampleResponse": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
    }
  },
  "GET /api/articles/:id/comments": {
    "description": "serves all comments for article matching the id passed in :id",
    "queries": [],
    "exampleResponse": {
      "comment_id": 13,
      "votes": 9,
      "created_at": "2018-05-30T15:59:13.341Z",
      "author": "david",
      "body": "comment content here",
      "article_id": 1
    }
  },
  "POST /api/articles/:id/comments": {
    "description": "serves all comments for article matching the id passed in :id",
    "queries": [],
    "bodyFormat": {
      "username": "a_valid_username",
      "body": "the comment content..."
    },
    "exampleResponse": {
      "comment_id": 13,
      "votes": 9,
      "created_at": "2018-05-30T15:59:13.341Z",
      "author": "david",
      "body": "comment content here",
      "article_id": 1
    }
  }
}
